    'categorizePatients.R'
    'chromClust.R'
    'countAberrations.R'
    'extractFromBarcode.R'
    'getChr18status.R'
    'getSegmentStatus.R'
    'plot.cna.freq.R'
    'plotLimmaAllChroms.R'
    'plotLimma.R'
    'runLimma.R'
    'squaredRangesToDataFrame.R'
    'squaredRangesToListOfDataFrames.R'
